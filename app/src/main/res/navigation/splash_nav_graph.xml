<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/get_started_fragment"
    android:id="@+id/splash_nav_graph"
    >

    <fragment
        android:id="@+id/get_started_fragment"
        android:name="com.example.android.ui.GetStartedFragment"
        tools:layout="@layout/get_started_fragment"
        >
        <action
            android:id="@+id/actionGetStartedToSignUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/enter_anim"
            app:exitAnim="@anim/exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.android.ui.login.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.android.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"/>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.android.ui.login.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register"/>
    <fragment
        android:id="@+id/homepageFragment"
        android:name="com.example.android.ui.bottom_nav_fragment.HomepageFragment"
        android:label="fragment_homepage"
        tools:layout="@layout/fragment_homepage" >
        <action
            android:id="@+id/action_homepageFragment_to_playlistFragment"
            app:destination="@id/playlistFragment" />
    </fragment>
    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.example.android.ui.bottom_nav_fragment.LibraryFragment"
        android:label="PlaylistFragment"
        tools:layout="@layout/fragment_library"/>
    <fragment
        android:id="@+id/arcticsFragment"
        android:name="com.example.android.ui.bottom_nav_fragment.ArcticsFragment"
        android:label="ArcticsFragment" />


    <!--    <fragment-->
    <!--        android:id="@+id/progressSplashFragment"-->
    <!--        android:name=""/>-->
</navigation>