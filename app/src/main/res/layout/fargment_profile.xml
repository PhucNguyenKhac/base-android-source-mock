<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/background_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg_profile"
                android:scaleType="centerCrop"
                >
                <TextView
                    android:id="@+id/text_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/definite_dimen_20"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/profil"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteY="30dp" />

                <ImageView
                    android:id="@+id/image_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.707"
                    app:layout_constraintStart_toEndOf="@+id/text_profile"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/more" />

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="83dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/roundedimageprofile"
                    android:radius="120dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_profile"
                    app:srcCompat="@drawable/propil_image" />

                <TextView
                    android:id="@+id/text_nameProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/fauzian_ahmad"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_image" />

                <TextView
                    android:id="@+id/text_emailProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="fauzianahmad04@gmail.com"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_nameProfil" />

                <TextView
                    android:id="@+id/text_follower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Followers"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/text_emailProfil"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="248dp" />

                <TextView
                    android:id="@+id/text_following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Following"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/text_emailProfil"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/numberFollower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="129"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/text_follower"
                    app:layout_constraintEnd_toEndOf="@+id/text_follower"
                    app:layout_constraintStart_toStartOf="@+id/text_follower"
                    tools:layout_editor_absoluteY="274dp" />

                <TextView
                    android:id="@+id/numberFollowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="238"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/text_following"
                    app:layout_constraintEnd_toEndOf="@+id/text_following"
                    app:layout_constraintStart_toStartOf="@+id/text_following"
                    tools:layout_editor_absoluteY="274dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/text_findFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Find friend"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/text_follower"
                app:layout_constraintStart_toStartOf="@+id/text_follower"
                tools:layout_editor_absoluteY="359dp" />

            <ImageView
                android:id="@+id/findFriend"
                android:layout_width="35dp"
                android:layout_height="26dp"
                app:layout_constraintEnd_toEndOf="@+id/text_follower"
                app:layout_constraintStart_toStartOf="@+id/text_follower"
                app:layout_constraintTop_toBottomOf="@id/numberFollower"
                app:srcCompat="@drawable/findfriend_button" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="30dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="@+id/text_following"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintStart_toStartOf="@+id/text_following"
                app:srcCompat="@drawable/share_button"
                tools:layout_editor_absoluteY="326dp" />

            <TextView
                android:id="@+id/text_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Share"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/share"
                app:layout_constraintStart_toStartOf="@+id/share"
                tools:layout_editor_absoluteY="359dp" />

            <TextView
                android:id="@+id/text_mostplayed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat"
                android:text="Mostly Played"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/text_findFriend"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="@+id/text_findFriend"
                app:layout_constraintTop_toBottomOf="@+id/text_findFriend" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="385dp"
                android:layout_height="249dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_mostplayed"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>
