<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/definite_dimen_12">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewTodayHitItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/definite_dimen_20">

        <ImageView
            android:id="@+id/imgTodayHitItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_today_hit_item"
            android:scaleType="centerCrop"
            android:src="@drawable/img_song_test"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTodayHitName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ArTi Untuk Cinta"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="@dimen/definite_dimen_6"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cardviewTodayHitItem"
        app:layout_constraintStart_toStartOf="@id/cardviewTodayHitItem"
        android:textSize="@dimen/text_size_small"/>


    <TextView
        android:id="@+id/tvTodayHitArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Arsy Widianto, Tiara Andini"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/colorPrimary"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tvTodayHitName"
        app:layout_constraintStart_toStartOf="@id/cardviewTodayHitItem"
        app:layout_constraintEnd_toEndOf="@id/cardviewTodayHitItem"
        android:textSize="@dimen/text_size_small"
        />
</androidx.constraintlayout.widget.ConstraintLayout>