<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/definite_dimen_390"
        android:layout_height="@dimen/definite_dimen_38"
        android:src="@drawable/spotify_logo"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="59dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/definite_dimen_30"
        android:layout_marginLeft="@dimen/definite_dimen_12"/>

    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:adjustViewBounds="true"
        android:src="@drawable/background_app"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="119dp"
        app:layout_constraintTop_toBottomOf="@+id/logo"/>

    <TextView
        android:id="@+id/sloganText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageBackground"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="100dp"
        android:text="@string/app_name_get_started"
        android:textColor="#1ED760"
        android:textSize="@dimen/definite_dimen_24"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageBackground" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sloganText"
        android:text="@string/description_app"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/definite_dimen_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingRight="@dimen/definite_dimen_50"
        android:paddingLeft="@dimen/definite_dimen_50"
        app:layout_constraintVertical_bias="0.219"
        tools:layout_editor_absoluteX="0dp"
        android:maxLines="4"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGetStarted"
        android:layout_width="@dimen/definite_dimen_340"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:text="Get Started"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="667dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/definite_dimen_20"
        android:layout_marginRight="@dimen/definite_dimen_20"
        android:layout_marginLeft="@dimen/definite_dimen_20"/>
</androidx.constraintlayout.widget.ConstraintLayout>